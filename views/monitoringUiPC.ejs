    <script>
        //스위치 On/Off 이벤트
        $(function() {
            $('#switch').click(function() {
                if ($(this).is(":checked")) {
                    $(this).parent().parent().parent().children('.Light_Switch').html('<p1>On</p1>');
                } else {
                    $(this).parent().parent().parent().children('.Light_Switch').html('<p1>Off</p1>');
                }

                if ($("input:checkbox[name=complete_yn]").is(":class") == true) {
                    $("input:checkbox[name=complete_yn]").prop("checked", false);
                }
            });
        });
        
        //스위치 모션 스타일
        $(document).ready(function() {
            $(".slideBtn> input").change(function() {
                if ($(this).is(":checked")) {
                    $(this).parent().addClass("skyblue");
                } else {
                    $(this).parent().removeClass("skyblue");
                }
            });
        });

        //센서 스위치 솔리드
        $(function() {
            $(".sensor").css({
                "border": "10px solid black"
            });
        });
        
        //10초마다 리로드
        setTimeout(function(){
            location.reload();
            console.log("reload");
        }, 7000);
    </script>

